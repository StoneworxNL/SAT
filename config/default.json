{
    "checksFolder": "../qualityChecks/",
    "checks": [{
            "fnc": "NamingConvention",
            "options": { "allowedPrefixes": [
                    "ACO",
                    "ACT",
                    "SUB",
                    "CRS",
                    "SCH",
                    "OCH",
                    "DS",
                    "VAL",
                    "RET",
                    "CTL",
                    "TRN",
                    "OPR",
                    "FNC",
                    "ASU",
                    "BSD",
                    "HCH",
                    "SCE",
